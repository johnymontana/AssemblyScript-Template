modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Build and Serve"

[[workflows.workflow]]
name = "Build and Serve"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npx asc src/index.ts -o build/release.wasm --bindings esm && npx http-server -p 8000"
waitForPort = 8000

[deployment]
run = ["sh", "-c", "npx asc src/index.ts -o build/release.wasm --bindings esm && npx http-server -p 8000"]

[[ports]]
localPort = 8000
externalPort = 80
